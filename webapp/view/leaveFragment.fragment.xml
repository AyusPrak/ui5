<core:FragmentDefinition
     xmlns="sap.m"
     xmlns:core="sap.ui.core"
     xmlns:c="sap.ui.core"
     xmlns:l="sap.ui.layout"
     xmlns:f="sap.ui.layout.form"
     xmlns:ui="sap.ui">
     <Dialog>
        <f:SimpleForm id="idStudentRegistrationForm"
            maxContainerCols="2"
            editable="true"
            layout="ResponsiveGridLayout"
            title="Leave Request"
            labelSpanL="2"
            labelSpanM="2"
            emptySpanL="0"
            emptySpanM="0"
            columnsL="1"
            columnsM="1"
            class="editableForm">
            <f:content>
               <core:Title text="Basic Information"/>
                <Label text="Name"/>
                   <Input value="{/firstName}" placeholder="First Name"  />
                   <Input value="{/middleName}" placeholder="Middle Name" >
                      <layoutData>
                        <l:GridData span="L3 M3 S4" />
                      </layoutData>
                    </Input>
                    <Input value="{/lastName}" placeholder="Last Name" >
                        <layoutData>
                        <l:GridData span="L3 M3 S4"/>
                        </layoutData>
                    </Input>
                    <core:Icon src="sap-icon://person-placeholder" size="3em">
                    </core:Icon>
                <Label text="Gender" />
                    <RadioButtonGroup selectedIndex="{/gender}" columns="4" select="onGenderSelect" width="100%">
                        <buttons>
                          <RadioButton id="rbFemaleID" text="Female" />
                          <RadioButton id="rbMaleId" text="Male" />
                        </buttons>
                    </RadioButtonGroup>
                <Label text="Date of birth" />
                    <DatePicker id="validFromPickerEdit" value="{/dateofBirth}">
                        <layoutData>
                           <l:GridData span="L3 M3 S4" />
                        </layoutData>
                    </DatePicker>
                <Label text="Email Id" />
                    <Input value="{/EmailID}" placeholder="Enter Email Id" width="200%">
                        <layoutData>
                           <l:GridData span="L3 M3 S3" />
                        </layoutData>
                    </Input>
                <Label text="Leave from" />
                    <DatePicker id="validFromPickEdit" value="{/leaveFrom}">
                         <layoutData>
                            <l:GridData span="L3 M3 S4" />
                         </layoutData>
                    </DatePicker>
                <Label text="Leave to" />
                    <DatePicker id="validFromPickersEdit" value="{/leaveTo}">
                         <layoutData>
                            <l:GridData span="L3 M3 S4" />
                         </layoutData>
                    </DatePicker>
                <Label text="" />
                   <Button text="Save" type="Accept"  press="handleSaveBtnPress" />
                   <Button text="Cancel" type="Reject"  press="handleCancelBtnPress" />

            </f:content>
        </f:SimpleForm>
     </Dialog>
</core:FragmentDefinition>